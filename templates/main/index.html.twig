{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}

        {% for post in posts %}
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ post.text }}</h5>
                    <p class="card-text">{{ post.user.firstName }} {{ post.user.lastName }}</p>
                    {% if user and user.id == post.user.id %}
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="card-link">edit</a>
                    {% endif %}
                </div>
            </div>
        {% else %}
                <p>no records found</p>
        {% endfor %}
{% if user %}
    <a href="{{ path('post_new') }}">Create new post</a>
{% endif %}
{% endblock %}
